<?xml version="1.0" encoding="ISO-8859-1"?>
 <testdefinition version="0.1">
  <suite name="testrunner-lite-tests" domain="AutomatedTesting">
   <set name="testrunner-lite-unit-tests" description="Unit tests for testrunner-lite">

    <case type="Functional" name="testrunnerlite_unit_tests_argumentparser" description="testrunner-lite argumentparser tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests argumentparser</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_features" description="testrunner-lite features tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests features</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_filters" description="testrunner-lite filters tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests filters</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_manual_executor" description="testrunner-lite manual_executor tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests manual_executor</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_testdefinitionparser" description="testrunner-lite testdefinitionparser tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests testdefinitionparser</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_testexecutor" description="testrunner-lite testexecutor tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests testexecutor</step>
    </case>
    <case type="Functional" name="testrunnerlite_unit_tests_testresultlogger" description="testrunner-lite testresultlogger tests" timeout="180">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests testresultlogger</step>
    </case>  

    <environments>
     <scratchbox>false</scratchbox>
     <hardware>true</hardware>
    </environments>
   </set>
  </suite>
 </testdefinition>
