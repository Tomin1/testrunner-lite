<?xml version="1.0" encoding="ISO-8859-1"?>
 <testdefinition version="0.1">
  <suite name="testrunner-lite-tests" domain="AutomatedTesting">
   <set name="testrunner-lite-unit-tests" description="Unit tests for testrunner-lite">

    <case type="Unit" name="testrunnerlite_unit_tests" description="testrunner-lite tests">
     <step>export CK_DEFAULT_TIMEOUT=10;/usr/lib/testrunner-lite-tests/testrunnerliteunittests</step>
    </case>  

    <environments>
     <scratchbox>false</scratchbox>
     <hardware>true</hardware>
    </environments>
   </set>
  </suite>
 </testdefinition>
